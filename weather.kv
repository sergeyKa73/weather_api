<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		padding: 30
        spacing: 20

		Label:
			id: name_date
			text_size: self.size
			halign: "center"
			valign: "middle"
			text: "Дата"
			font_size:32
			size_hint: (1, .2)

		Label:
			id:name_quote
			text_size: self.size
			halign: "center"
			valign: "middle"
			text: "Цитата дня"
			font_size:32

		Label:
			id: name_label
			text_size: self.size
			halign: "center"
			valign: "middle"
			text: "Погода"
			font_size:32

		TextInput:
			id: name_input
			multiline: False
			size_hint: (1, .3)
			hint_text:'Введите город'

        RoundedButton:
            text: "Получить"
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
			on_press: root.press()

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba:(48/255, 84/255, 150/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]